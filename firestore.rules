rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read-only access to drivers for the tracker page
    match /drivers/{driverId} {
      allow read: if true;
      allow write: if request.auth != null; // Only authenticated admins can write
    }

    // Allow read/write access to the route cache for authenticated users (server-side)
    match /routeCache/{cacheId} {
      allow read, write: if request.auth != null;
    }
    
    // Deny all other writes by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
